<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.foodapp.MainActivity$PlaceholderFragment" >
    
<!-- Like Button -->
    <ImageButton
        android:id="@+id/imageButtonLike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:contentDescription="good"
        android:onClick="goodButton"
        android:src="@drawable/ic_action_good" />
<!-- dislike Button -->
    <ImageButton
        android:id="@+id/imageButtonDislike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:contentDescription="bad"
        android:onClick="badButton"
        android:src="@drawable/ic_action_bad" />
<!-- Accept Button -->
    <ImageButton
        android:id="@+id/imageButtonEat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:contentDescription="accept"
        android:onClick="acceptButton"
        android:src="@drawable/ic_action_accept" />
<!-- next Button -->
    <ImageButton
        android:id="@+id/imageButtonNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageButtonEat"
        android:layout_toRightOf="@+id/imageButtonEat"
        android:contentDescription="forward"
        android:onClick="forwardButton"
        android:src="@drawable/ic_action_forward" />
<!-- back Button -->
    <ImageButton
        android:id="@+id/imageButtonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageButtonEat"
        android:layout_toLeftOf="@+id/imageButtonEat"
        android:contentDescription="back"
        android:onClick="backButton"
        android:src="@drawable/ic_action_back" />
<!--Meal Text View -->
    <TextView
        android:id="@+id/textViewMealName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Apfel"
        android:textAppearance="?android:attr/textAppearanceLarge" />
<!-- Meal ImageView -->
    <ImageView
        android:id="@+id/imageViewprofilbild"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textViewMealName"
        android:layout_centerHorizontal="true"
        android:src="@drawable/apfel" />
<!-- Calories TextView -->
    <TextView
        android:id="@+id/textViewKcal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewMealName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />
<!-- Random Food Button -->
    <ImageButton
        android:id="@+id/imageButton_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageButtonEat"
        android:layout_toRightOf="@+id/imageButtonBack"
        android:onClick="refreshButton"
        android:src="@drawable/ic_action_refresh" />

</RelativeLayout>